 <% if post.favorited_by?(current_user) %>
    <div>
      <%= link_to post.favorites.count, post_favorites_path(post), method: :delete, remote: true, class: "fas fa-heart text-decoration-none"  %>
    </div>
  <% else %>
    <div>
      <%= link_to post.favorites.count, post_favorites_path(post), method: :post, remote: true, class: "far fa-heart text-decoration-none"  %>
    </div>
  <% end %>