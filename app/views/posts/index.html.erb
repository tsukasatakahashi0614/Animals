<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5">
      <%= render "form" %>
    </div>
    <div class="col-md-6 mt-5">
      <tbody>
        <% @posts.each do |post| %>
        <td>
          <%= link_to user_path(post.user) do %>
          <%= attachment_image_tag(post.user, :profile_image, size: "48x48", fallback: "no_image.jpg") %>
          <% end %>
        </td>
        <td>
          <%= post.user.name %>
        </td>
        <div>
          <%= attachment_image_tag post, :image, format: "jpeg", size: "566x331" %>
        </div>
        <div>
          <%= link_to post_path(post) do %>
            <%= post.body %>
          <% end %>
        </div>
        <% if post.favorited_by?(current_user) %>
          <div>
            <%= link_to post_favorites_path(post), method: :delete do %>
              ♥<%= post.favorites.count %> いいね
            <% end %>
          </div>
          <% else %>
          <div>
            <%= link_to post_favorites_path(post), method: :post do %>
              ♡<%= post.favorites.count %> いいね
            <% end %>
          </div>
          <% end %>
        <% end %>
      </tbody>
    </div>
    <div class="col-md-3 mt-5">
      <%= render "search/form" %>
    </div>
  </div>
</div>