<tbody>
  <% posts.each do |post| %>
  <tr>
    <td>
      <%= link_to user_path(post.user) do %>
        <%= attachment_image_tag(post.user, :profile_image, size: "48x48", fallback: "no_image.jpg") %>
      <% end %>
    </td>
    <td><%= post.user.name %></td>
    <div><%= attachment_image_tag post, :image, format: "jpeg", size: "512x288" %></div>
    <td class="favorite-btn"><div id="post_<%= post.id %>"><%= render "favorites/favorite-btn", post: post %></div></td>
    <td class="comments_count">コメント数: <%= post.post_comments.count %></td>
    <div>
      <%= link_to post_path(post) do %>
        <%= post.body %>
      <% end %>
    </div>
  <% end %>
  </tr>
</tbody>