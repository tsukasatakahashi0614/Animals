<div class="container">
  <div class="row">
    <div class="col-md-2 offset-1 mt-5">
      <%= render "layouts/links" %>
    </div>
    <div class="col-md-6 mt-5" style="width:300px;height:800px;overflow:auto;">
      <tbody>
        <% @datas.each do |data| %>
        <td>
          <%= link_to user_path(data.user) do %>
          <%= attachment_image_tag(data.user, :profile_image, size: "48x48", fallback: "no_image.jpg") %>
          <% end %>
        </td>
        <td>
          <%= data.user.name %>
        </td>
        <div>
          <%= attachment_image_tag data, :image, format: "jpeg", size: "512x288" %>
        </div>
        <div>
          <%= link_to post_path(data) do %>
          <%= data.body %>
          <% end %>
        </div>
        <% if data.favorited_by?(current_user) %>
        <div>
          <%= link_to post_favorites_path(data), method: :delete do %>
          ♥<%= data.favorites.count %> いいね
          <% end %>
        </div>
          <% else %>
        <div>
          <%= link_to post_favorites_path(data), method: :post do %>
          ♡<%= data.favorites.count %> いいね
          <% end %>
        </div>
        <% end %>
        <% end %>
      </tbody>
    </div>
    <div class="col-md-3 mt-5">
      <%= render "search/form" %>
    </div>
  </div>
</div>