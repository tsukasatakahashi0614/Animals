<div>
  <%= form_with url: search_search_path, method: :get, local: true do |f| %>
  <%= f.text_field "search[value]", class: "form-control form-control-sm", placeholder: "キーワード検索" %>
  <div hidden>
    <%= f.select 'search[how]', options_for_select({ "部分一致" => "partical"}) %>
  </div>
  <div hidden>
    <%= f.submit %>
  </div>
  <% end %>
</div>
  <% @genres.each do |genre| %>
    <div class="card">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <%= link_to genre.genre_name, search_search_path("search[value]": genre.id, "search[how]": "match"), class: "text-dark text-decoration-none stretched-link" %>
        </li>
      </ul>
    </div>
  <% end %>