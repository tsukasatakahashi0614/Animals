<div>
  <%= form_with url: search_search_path, method: :get, local: true do |f| %>
  <%= f.text_field "search[value]", class: "form-control form-control-sm" %>
  <div hidden>
    <%= f.select 'search[how]', options_for_select({ "部分一致" => "partical"}) %>
  </div>
  <div hidden>
    <%= f.submit %>
  </div>
  <% end %>
</div>
<table class="table table-hover">
  <% @genres.each do |genre| %>
  <tbody>
    <td>
      <%= link_to genre.genre_name, search_search_path("search[value]": genre.id, "search[how]": "match"), class: "text-dark" %>
    </td>
  </tbody>
  <% end %>
</table>