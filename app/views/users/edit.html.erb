<div class="container">
  <div class="row">
    <div class="col-md-2 offset-1 mt-5">
      <%= render "layouts/links" %>
    </div>
    <div class="col-md-6 mt-5">
      <div class="card">
        <h2 class="p-2">プロフィールを編集</h2>
          <%= form_with model:@user, local:true do |f| %>
          <div class="p-2">
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
          </div>
          <div class="p-2">
            <%= f.text_area :introduction, autofocus: true, placeholder:"自己紹介" %>
          </div>
          <div class="p-2">
            <%= f.attachment_field :profile_image %>
          </div>
          <div class="p-2">
            <%= f.submit "変更を保存" %>
          <% end %>
          </div>
        </div>
      </div>
    <div class="col-md-3 mt-5">
      <%= render "search/form" %>
    </div>
  </div>
</div>