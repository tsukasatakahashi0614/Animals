<div class="container">
  <div class="row">
    <div class="col-md-4 mt-5 offset-4">
      <div class="card">
        <h2 class="p-2">ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="p-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email", class: "form-control"  %>
          </div>
          <div class=" p-2">
            <%= f.password_field :password, autocomplete: "current-password", :placeholder => "Password", class: "form-control" %>
          </div>
          <% if devise_mapping.rememberable? %>
          <div class="field p-2">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end %>
          <div class="actions p-2">
          　<%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>
        <div class="p-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
    </div>
  </div>
</div>